 <link rel="stylesheet" href="styles.css">

  <header>
        <h1>Spoon Theory To-Do List</h1>
        <div class="spoons">
            <p>Available Spoons: <span id="spoons">12</span></p>
        </div>
    </header>
    
    <section class="tasks">
        <h2>Tasks</h2>
        <input type="text" id="taskName" placeholder="Task name">
        <input type="number" id="taskSpoon" placeholder="Spoon cost">
        <button id="addTask">Add Task</button>
        <ul id="taskList"></ul>
    </section>

    <section class="self-care">
        <h2>Self-Care Activities</h2>
        <input type="text" id="selfCareName" placeholder="Activity name">
        <input type="number" id="selfCareSpoon" placeholder="Spoon replenish">
        <button id="addSelfCare">Add Activity</button>
        <ul id="selfCareList"></ul>
    </section>

    <section class="mood">
        <h2>Mood Rating</h2>
        <label>Morning Mood: <input type="number" id="morningMood" min="1" max="10"></label>
        <label>Evening Mood: <input type="number" id="eveningMood" min="1" max="10"></label>
    </section>
    
    <script src="/script.js"></script>

