<!DOCTYPE html>
<html lang="en">
<head>
   <!-- Include meta tags and stylesheets -->
</head>
<body>
   <!-- Include your navigation bar here if needed -->

   <div class="container mt-5">
      <h1>Search Tasks</h1>

      <!-- Search Bar -->
      <form class="mb-4">
         <div class="input-group">
            <input type="text" class="form-control" placeholder="Search tasks" id="searchInput">
            <button type="button" class="btn btn-primary" id="searchButton">Search</button>
         </div>
      </form>

      <!-- Filter and Sort Options -->
      <div class="row">
         <div class="col-md-6">
            <!-- Filter options (e.g., by category, priority) -->
            <div class="form-group">
               <label for="filterCategory">Filter by Category:</label>
               <select class="form-select" id="filterCategory">
                  <option value="">All Categories</option>
                  <!-- Add category options dynamically if needed -->
               </select>
            </div>
         </div>
         <div class="col-md-6">
            <!-- Sort options (e.g., by date, priority) -->
            <div class="form-group">
               <label for="sortOption">Sort by:</label>
               <select class="form-select" id="sortOption">
                  <option value="date">Date</option>
                  <option value="priority">Priority</option>
                  <!-- Add more sorting options if needed -->
               </select>
            </div>
         </div>
      </div>

      <!-- Display Search Results -->
      <div id="searchResults">
         <!-- Search results will be displayed here -->
      </div>
   </div>

   <!-- Include Bootstrap and JavaScript scripts -->
   <script src="/js/search.js"></script>
</body>
</html>
