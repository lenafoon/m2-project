{{#if userInSession}}
  <h2>Welcome, {{ userInSession.username }}!</h2>
  <p>This is your profile page, my friend!</p>


  <section>
    <h3>Add New Task</h3>
    <input type="text" id="newTask" placeholder="Enter a new task">
    <button onclick="addTask()">Add</button>

    <h3>Your Tasks</h3>
    <ul id="taskList">
      <!-- Tasks entered by the user will be displayed here dynamically -->
    </ul>
  </section>

  <script>
    function addTask() {
      const newTaskInput = document.getElementById('newTask');
      const taskText = newTaskInput.value.trim();
      if (taskText) {
        // Create a new list item and append it to the task list
        const taskList = document.getElementById('taskList');
        const taskItem = document.createElement('li');
        taskItem.textContent = taskText;
        taskList.appendChild(taskItem);

        // Clear the input field
        newTaskInput.value = '';
      }
    }
  </script>
{{else}}
  <br>
  <p>Still no logged-in user, sorry!</p>
{{/if}}
